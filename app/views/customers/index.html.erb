<%- model_class = Customer.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:ceo) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:tax_code) %></th>
      <th><%= model_class.human_attribute_name(:vat) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.title %></td>
          <td><%= customer.name %> <%= customer.surname %></td>
          <td><%= customer.address %> <%= customer.zip_code %> <%= customer.town %> <%= customer.province %></td>
          <td><%= customer.tax_code %></td>
          <td><%= customer.vat %></td>
          <td><%= link_to(image_tag('icons/document--pencil.png', :alt => 'Edit customer', :title => 'Edit customer'), edit_customer_path(customer)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-primary' %>
