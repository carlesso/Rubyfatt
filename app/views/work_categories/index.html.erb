<%= content_for :breadcrumb do %>
  <%= print_breadcrumbs([
                      [t('breadcrumb.work_categories.index', :default => "Categories"), options_path]
                    ]).html_safe %>
<% end %>
<%- model_class = WorkCategory.new.class -%>
<h1><%=t '.title', :default => "Categories" %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%=t model_class.human_attribute_name(:label) %></th>
      <th><%=t 'actions', :default => "Actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @work_categories.each do |work_category| %>
      <tr>
        <td><%= work_category.label %></td>
        <td>
          <%= link_to('<i class="icon-edit"></i> '.html_safe+t('.edit', :default => 'Edit'), edit_work_category_path(work_category), :class => 'btn btn-mini btn-warning') %>
          <%= link_to('<i class="icon-remove"></i> '.html_safe+t('.delete', :default => 'Delete'), work_category_path(work_category), :method => :delete, :data => { :confirm => t(".delete_confirm", :default => "Are you sure to delete the category?") }, :class => 'btn btn-mini btn-danger') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_work_category_path,
            :class => 'btn btn-primary' %>
