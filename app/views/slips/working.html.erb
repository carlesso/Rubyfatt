<%= content_for :breadcrumb do %>
  <%= print_breadcrumbs([ 
                      [t('breadcrumb.working_slips', :default => "Working slips"), nil]
                    ]).html_safe %>
<% end %>
<!-- SLIPS -->
<%- model_class = Slip.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%=t model_class.human_attribute_name(:name) %></th>
      <th><%=t model_class.human_attribute_name(:customer) %></th>
      <th><%=t model_class.human_attribute_name(:rate) %></th>
      <th><%=t model_class.human_attribute_name(:created_at) %></th>
      <th><%=t model_class.human_attribute_name(:timed) %></th>
      <th><%=t model_class.human_attribute_name(:duration) %></th>
      <th><%=t model_class.human_attribute_name(:estimated) %></th>
      <th><%=t 'actions', :default => "Actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @slips.each do |slip| %>
      <tr>
        <td><%= slip.name %></td>
        <td><%= slip.customer.title %></td>
        <td><%= number_to_currency(slip.rate) %></td>
        <td><%= l slip.created_at %></td>
        <td><%= slip.timed? ? image_tag("icons/tick-circle.png") : image_tag("icons/slash.png") %></td>
        <td><%= slip.duration ? ChronicDuration.output(slip.duration, :format => :short) : '-' %></td>
        <td><%= slip.estimated? ? image_tag("icons/tick-circle.png") : image_tag("icons/slash.png") %></td>
        <td>
          <%= link_to(image_tag('icons/document--pencil.png', :alt => t('.edit', :default => 'Edit slip'), :title => t('.edit', :default => 'Edit slip')), edit_customer_slip_path(slip.customer, slip), :class => 'btn btn-mini') %>
          <%= link_to(image_tag('icons/cross-circle.png', :alt => t('.delete', :default => 'Delete slip'), :title => t('.delete', :default => 'Delete slip')), customer_slip_path(slip.customer,slip.id), :method => :delete, :confirm => t(".delete_confirm", :default => "Are you sure to delete the slip?"), :class => 'btn btn-mini') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<!-- /SLIPS -->