<%= simple_form_for @consolidated_tax, :html => {:class => 'form-horizontal' } do |f| %>

  <% if f.error_notification %>
    <%= f.error_notification %>
  <% end %>

  <legend></legend>
  <%= f.input :name %>
  <%= f.input :notes, :input_html => { :class => 'input-xlarge', :rows => 8 }, :hint => t('.notes_hint', :default => "Will be added to PDF as tax notes") %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag t('helpers.buttons.cancel', :default => 'Cancel'), :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>


