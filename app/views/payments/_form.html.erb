<%= form_tag "/invoice/#{@invoice.id}/payment", :class => 'form-horizontal' do %>
  <legend>Add payment to invoice <%= @invoice.number %> (<%= @invoice.customer.title %>)</legend>
  <div class="control-group string optional">
    <label class="string optional control-label" for="invoice_name"> Date</label>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">
          <img alt="Calendar" src="/assets/icons/calendar-month.png">
        </span>
        <input id="payment" class="input-small datepicker string" type="text" value="" size="30" name="payment">
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag "Add payment", :class => 'btn btn-primary' %>
  </div>
<% end %>