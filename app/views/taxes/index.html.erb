<%- model_class = ConsolidatedTax.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:rate) %></th>
      <th><%= model_class.human_attribute_name(:compound) %></th>
      <th><%= model_class.human_attribute_name(:order) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @taxes.each do |tax| %>
      <tr>
        <td><%= tax.name %></td>
        <td><%= tax.rate %>%</td>
        <td><%= tax.compound ? image_tag("icons/tick-circle.png") : image_tag("icons/slash.png") %></td>
        <td><%= tax.order %></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>