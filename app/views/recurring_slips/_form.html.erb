<%= simple_form_for @recurring_slip, :html => {:class => 'form-horizontal' } do |f| %>

  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= f.error_notification %>
    </div>
  <% end %>
  
  <legend>Recurring slip</legend>
  <%= f.association :customer, :collection => current_user.customers.collect{ |customer| [customer.title, customer.id] }, :prompt => 'Select a customer' %>
  <%= f.input :name %>
  <%= f.input :rate %>
  
  <div class="control-group select required">
    <label class="select required control-label" for="recurring_slip_customer">
      <abbr title="required">*</abbr>
      Months of recurrency
    </label>
    <div class="controls">
      <%= select 'schedule', 'month', schedule_month_options %>
    </div>
  </div>
  
  <div class="control-group select required">
    <label class="select required control-label" for="recurring_slip_customer">
      <abbr title="required">*</abbr>
      Day of expiration
    </label>
    <div class="controls">
      <%= select 'schedule', 'day', schedule_day_options %>
    </div>
  </div>

  <div class="control-group string optional">
    <label class="string optional control-label" for="invoice_name">Next occurrence</label>
    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">
          <img alt="Calendar" src="/assets/icons/calendar-month.png">
        </span>
        <%= text_field_tag 'schedule[next]', '', :class => 'input-small datepicker' %>
      </div>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>
<% end %>