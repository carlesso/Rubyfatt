<h1>Sign in</h1>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "new_user form-horizontal"}) do |f| %>
  <legend>Insert your credentials</legend>
  <% if flash[:alert] %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <%= f.input :email %>
	<%= f.input :password %>
	<%= f.input :remember_me, :as => :boolean %>
  <div class="form-actions">
    <%= f.submit 'Login', :class => 'btn-primary' %>
  </div>
<% end %>
<%= render :partial => "devise/shared/links" %>