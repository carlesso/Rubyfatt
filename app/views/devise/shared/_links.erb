<div class="btn-group">
  <a class="btn btn-primary" href="#">
    <i class="icon-user icon-white"></i>
    &nbsp;Available actions
  </a>
  <a class="btn btn-primary dropdown-toggle" href="#" data-toggle="dropdown">
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <%- if controller_name != 'sessions' %>
      <li>
        <%= link_to '<i class="icon-pencil"></i>Edit'.html_safe, new_session_path(resource_name) %>
      </li>
    <% end -%>
    
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li>
        <%= link_to '<i class="icon-user"></i>Sign up'.html_safe, new_registration_path(resource_name) %>
      </li>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <li>
        <%= link_to '<i class="icon-repeat"></i>Forgot your password?'.html_safe, new_password_path(resource_name) %>
      </li>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li>
        <%= link_to '<i class="icon-refresh"></i>Didn\'t receive confirmation instructions?'.html_safe, new_confirmation_path(resource_name) %>
      </li>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li>
        <%= link_to '<i class="icon-wrench"></i>Didn\'t receive unlock instructions?'.html_safe, new_unlock_path(resource_name) %>
      </li>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <li class="divider"></li>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li>
          <%= link_to '<i class="icon-star"></i>Sign in with #{provider.to_s.titleize}'.html_safe, omniauth_authorize_path(resource_name, provider) %>
        </li>
      <% end -%>
    <% end -%>
    
  </ul>
</div>