<%= content_for :breadcrumb do %>
  <%= print_breadcrumbs([ 
                      [t('breadcrumb.options.index', :default => "Options"), options_path]
                    ]).html_safe %>
<% end %>
<%- model_class = Option.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%=t model_class.human_attribute_name(:name) %></th>
      <th><%=t model_class.human_attribute_name(:value) %></th>
      <th><%=t 'actions', :default => "Actions" %></th>
    </tr>
  </thead>
  <tbody>
    <% @options.each do |option| %>
      <tr>
        <td><%= option.name %></td>
        <td><%= option.value %></td>
        <td><%= link_to(image_tag('icons/document--pencil.png', :alt => t('.edit', :default => 'Edit option'), :title => t('.edit', :default => 'Edit option')), edit_option_path(option), :class => 'btn btn-mini') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="alert alert-info">
  <h4 class="alert-heading"><%=t '.alert.title', :default => "Pay attention!" %></h4>
  <%=t '.alert.message', :default => "Options keys are used to determine various aspects of slips and invoices workflow. Pay a lot of attention while managing them!" %>
</div>
